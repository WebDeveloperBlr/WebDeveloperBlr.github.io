/* Tablet - Mobile */
$tabletMobile-min = 320px
$tabletMobile-max = 1024px	/* Tablet */
$tablet-min = 768px
$tablet-max = 1024px
/* Mobile */
$mobile-min = 320px
$mobile-max = 767px	/* Mobile iPhone 6 and 6 plus */
$iphone6-min = 375px
$iphone6-max = 736px
/* Iphone 5 */
$iphone5-min = 320px
$iphone5-max = 568px

@media screen and (min-width : $tabletMobile-min) and (max-width : $tabletMobile-max)
	.button.orange-theme.main-section__button
		width 150px
		height 50px
		font-size 14px
	.container, .review-section, .our-work-section__container, .header
		padding 0
		overflow hidden
	.header
		padding 0 100px
	.logo
		text-align left
	.top-contacts
		text-align right
	.footer
		margin-top 40px
		.container
			padding 0 40px
	.main-section__slider-arrows
		padding 0 40px
	.review-section__left-column-wrapper
		width auto
	.why-section
		overflow hidden
	.menu-item
		height auto
		width 100%
		padding 0px
	.menu-list
		transition all .5s ease
		z-index 998
		background-color rgba(29,37,41,.98)
		fixed(0px,-50%,0px,)
		margin 0
		width 50%
	.menu-link
		margin-top 20px
		font-size 17px
		display block
		width 100%
		height 40px
		pointer-events none
		&:after
			display none
			background-color transparent
		&:hover
			background-color none
			&:after
				display none
		&.active
			color #fff
			background-color Accent
			&.menu-item
				background-color Accent
			&:after
				display none
	.button.button-toggle 
		display block

	#toggle:checked 
		& ~ .menu-list
			padding-top 80px
			fixed(0px,0px,0px,)
			.menu-item
				padding 10px
				color white
				transform: scaleY(1);
				transition: all .6s ease-out;
				&:before 
					opacity: 0;
				&:hover
					background-color rgba(255,130,7,.4)
				&:after
					display none
			.menu-link
				pointer-events auto
				&.active
					.menu-item
						&:after
							display none

		& ~ .toggle-container
				.button.button-toggle
					cursor: pointer;
					transition: all .5s ease
					.toggle-lines
						position relative
						top 0px
						height 0px
						&:before
							top 9px
							transform rotate(-45deg)
							animation rotation-second 1s ease-out 1 alternate
						&:after
							top 7px
							transform rotate(45deg)
							animation rotation 1s ease-out 1 alternate
					&:hover
						box-shadow: 0 0 0 8px rgba(255, 130, 7, 0.1), inset 0 0 0 20px rgba(255, 130, 7, 0.1)
	.slider-wrap
		height 700px
	.slide
		height 700px
		padding-top 200px
		padding-bottom 0px
	.main-section__title
		word-spacing 5px
		font-size rem(30)
		letter-spacing 7px
	.main-section__text
		font-size rem(17)
		margin-bottom 100px
	.main-section__line
		margin 40px 0px
		width auto
		height 9px
		.square
			margin: 0 7px
			size(9px,9px)
			transform: rotate(45deg)
		.line
			relative(3px)
			width 220px
			height 2px
	.main-section__slider-arrows
		padding 0 0px
		top 410px
		transform scale(0.6)
		z-index 990
	.owl-dots
		margin 0
		top 600px
		.owl-dot
			size(14px,14px)	
	.main-section__array-down
		top 610px					
		size(30px)
		&:after
			top 10px
			left 7px
	.item-description
		padding 10px
		height auto
	.arrow-up
		right 20px
		bottom 20px

@media screen and (min-width : $mobile-min) and (max-width : $mobile-max = 767px)
	.review-section__items-wrapper .flex-double-column
		flex 1 100%
	.arrow-up
		right 20px
		bottom 20px
	.why-section
		padding 50px 0
	.review-section__items-wrapper 
		>.flex-container
			flex-direction column
			>.flex-double-column
				flex 1 100%
				text-align center
				&:first-child
					order 2 
			.review-section__left-column-wrapper, review-section__right-column-wrapper
				float none
				.review-section__left-column-items  
					text-align center
			.review-section__right-column-wrapper
				form
					margin-bottom 40px
					text-align center
					padding 0 20px
					>.flex-container
						flex-direction column
						.review-section__h4
							text-align left
						.captcha
							float left
			.review-section__right-column-wrapper input, .review-section__right-column-wrapper textarea
				width 100%
	.modal-form-wrapper
		size(320px, 500px)
		margin-left -160px
		margin-top -250px
		padding 20px
		.modal-title
			font-size 17px
		.modal-items
			margin-left -110px
			h4 
				font-size 15px
	.footer
		padding-top 10px
		height auto
		.copyrights
			margin-top 30px
		.footer__h4
			margin-bottom 10px
			margin-top 30px
		.separator
			margin 0
		.footer__logo
			margin-top 30px
			

		>.container
			>.flex-container
				text-align center
				align-items center
				flex-direction column
				justify-content flex-start
				.flex-triple-col:first-child
					order 3
				.flex-triple-col
					flex 1 100%
					order 1
					.footer__right-col
						text-align center
					
						
		
