	.modal-form-wrapper
		size(320px, 500px)
		margin-left -160px
		margin-top -250px
		padding 20px
		.modal-title
			font-size 17px
		.modal-items
			margin-left -110px
			h4 
				font-size 15px
				
	

		
		
		
