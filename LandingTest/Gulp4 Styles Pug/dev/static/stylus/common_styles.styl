//Design styles
.dark-theme
	background-color DarkColor
.orange-text
	color Accent



.separator
	.separator-img
		text-align center
	margin-bottom 20px
	

.nullheight
	height 0

.fullheight
	height 100%

.container
	padding 0 260px
	height 100%

//Flex styles	
.flex-container
	display flex
	height 100%
	justify-content center
.flex-wrap
	flex-wrap wrap
.flex-row-wrap
	flex-flow: row wrap
.flex
	display flex
.flex-space-between
	justify-content space-between
.flex-space-evenly
	justify-content space-evenly
.grid-item
	flex 1
.flex-column
	align-items center
	flex-direction column
	justify-content flex-start
.flex-double-column
	flex 1 50%
.flex-triple-col
	flex 1 33%

@media (max-width : 1326px)
	.container
		padding 0 40px
@media screen and (min-width : $mobile-min) and (max-width : $iphone5-max)
	.container 
		padding 0
