.why-section
	text-align center
	padding 55px 0
	padding-bottom 125px
.why-section__item
	width 240px
	min-height 190px
	flex: 1 25%
.why-section__items-wrapper
	margin-top 50px
.why-section__h4
	letter-spacing 2px
	font-size rem(16)
	color #28363d
.why-section__p
	rem(16)
	color #8198a0
	margin 0 50px
	margin-top 10px
.why-section__item
	img
		margin-bottom 30px
@media screen and (min-width : $tabletMobile-min) and (max-width : $tabletMobile-max)
	.why-section
		padding 40px 0
	.why-section__item
		margin 10px 5px
	.why-section__items-wrapper
		margin-top 50px
	.why-section__h4
		font-size rem(14)
	.why-section__p
		rem(13)
		margin 0 10px
		margin-top 10px
	.why-section__item
		img
			margin-bottom 20px
@media screen and (min-width : $mobile-min) and (max-width : $iphone5-max = 568px)
	.why-section
		padding 30px 0
	.why-section__item
		margin 5px 5px
	.why-section__items-wrapper
		margin-top 30px
	.why-section__h4
		font-size rem(13)
	.why-section__p
		rem(10)
		margin 0 5px
		margin-top 10px
	.why-section__item
		img
			margin-bottom 15px