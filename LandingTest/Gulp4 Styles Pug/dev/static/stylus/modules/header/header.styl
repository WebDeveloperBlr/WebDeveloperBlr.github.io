.logo 
	flex 1 25%
	text-align right
.header
	z-index 998
	position relative
	white-space nowrap
	overflow hidden
	fixed()
	width 100%
	height 120px
	align-items center
.menu-list
	margin 0 20px
	flex 1 50%
	text-transform uppercase
	font-size rem(15) 
	font-family MainFont
.menu-item
	flex 1 20%
	margin 0 5px
	transition all .5s ease
	padding 47px 20px 0 20px 
	height 100%
	text-align center
	
.menu-link
	&.active
		background-color FootColor
		color #6b848c
		&::after
			content ''
			display block
			min-width 100%
			min-height 4px
			background-color orange
			relative(-4px)
	&:hover
		&::after
			content ''
			display block
			min-width 100%
			min-height 4px
			background-color orange
			relative(-4px)
	
.top-contacts
	line-height rem(40px)
	display block
	flex 1 25%

.header__phone
	relative(15%,0,,)
	text-align left
	color Accent
	font-size rem(24px)
	font-family BoldFont
.logo__img
	relative(30%,,,0)
#toggle
	display none
.button.button-toggle 
	color #fff
	z-index 999
	fixed(7%,5%,,)
	display: none;
	width: 20px;
	height: 20px;
	background-color: transparent;
	border: none;
	cursor: pointer;
	transition: $transition-duration + 0.1;
	.toggle-lines
		position relative
		top 50%
		animation animation-center-line ease-out .5s 
		width 20px
		height 2px
		background-color #e6e6e6
		&:before
			animation rotation-before-alternate 1s ease-out 1 alternate
			content ''
			display block
			relative(-7px,,,)
			width 20px
			height 2px
			background-color #e6e6e6
		&:after
			animation rotation-after-alternate 1s ease-out 1 alternate
			content ''
			display block
			relative(5px,,,)
			width 20px
			height 2px
			background-color #e6e6e6
	&:hover 
		box-shadow: 0 0 0 8px rgba(0, 0, 0, 0.1), inset 0 0 0 20px rgba(0, 0, 0, 0.1);

@keyframes rotation{
	from{
		transform rotate(0deg)
	}

	to{
		transform rotate(45deg)
	}
}

@keyframes rotation-second{
	from{
		transform rotate(0deg)
	}
	to{
		transform rotate(-45deg)
	}
}


@keyframes rotation-after-alternate{
	from{
		transform rotate(45deg)
		top 0px
		
	}
	to{
		transform rotate(0)
		top 5px
	}
}

@keyframes rotation-before-alternate{
	from{
		transform rotate(-45deg)
		top 0px
	}
	to{
		transform rotate(0)
		top -7px
		
	}
}







	

	


	
	
	
