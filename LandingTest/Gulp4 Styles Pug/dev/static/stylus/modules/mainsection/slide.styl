.slide
	overflow hidden
	text-align center
	text-transform uppercase
	color DarkColor
	padding-top 250px
	padding-bottom 30px
	height 1120px
	background-image url('/static/img/mainsection/mainsection.jpg')
	background-size cover
	background-repeat no-repeat
	position relative
.slide-wrap
	float left
	width 100%
.main-section__title
	word-spacing 10px
	font-family BoldFont
	font-size rem(48)
	letter-spacing 16px
	display inline
	white-space nowrap
.main-section__text
	font-family LightFont
	font-size rem(24)
	margin-bottom 170px
.main-section__line
	margin 40px 0
	width 100%
	height 9px
	.square
		margin: 0 7px
		size(9px,9px)
		background-color DarkColor
		transform: rotate(45deg)
	.line
		relative(3px)
		width 400px
		height 2px
		background-color DarkColor
.main-section__button
	width 350px
	height 70px
	font-size rem(30)
	padding-top 15px
@media (max-width: 1300px)
	.slide
		height 850px
		padding-top 220px
		.container
			padding 0
	.main-section__title
		font-size rem(37)
	.main-section__line
		margin 40px 0
		height 7px
		.squares
			size(7px,7px)
		.line
			width 350px
	.main-section__text
		font-size rem(20)
		margin-bottom 90px
	.main-section__button
		transform scale(0.7)
@media screen and (min-width : $tabletMobile-min) and (max-width : $tabletMobile-max)
	.slide
		height 700px
		padding-top 200px
		padding-bottom 0px
	.main-section__title
		word-spacing 5px
		font-size rem(30)
		letter-spacing 7px
	.main-section__text
		font-size rem(17)
		margin-bottom 100px
	.main-section__line
		margin 40px 0px
		width auto
		height 9px
		.square
			margin: 0 7px
			size(9px,9px)
			transform: rotate(45deg)
		.line
			relative(3px)
			width 220px
			height 2px
	.main-section__button
		transform scale(0.7)
@media screen and (min-width : $mobile-min) and (max-width : $iphone5-max = 568px)
	.slide
		padding-top 170px
		height 430px
	.main-section__title
		font-size 14px
	.main-section__line
		margin 20px 0
		.line
			width 130px
			height 1px
		.square
			transform rotate(45deg) scale(0.7)
	.main-section__text
		font-size 12px
		margin-bottom 30px
	.main-section__button
		margin-top -20px
		transform scale(0.3)
		