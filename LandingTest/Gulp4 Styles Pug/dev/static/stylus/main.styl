html
	line-height 1.3
	font-size 16px


body
	font-family LightFont


h1,h2,h3,h4,h5,h6
	margin 0
	text-transform uppercase


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color white

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box


